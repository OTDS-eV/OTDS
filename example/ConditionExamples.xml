<?xml version="1.0" encoding="UTF-8"?>
<Otds xmlns="http://otds-group.org/otds" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" Version="1.0" Market="DE" xsi:schemaLocation="http://otds-group.org/otds ../xsd/otds.xsd">
	<!-- Dieses Beispiel zeigt die Verwendung von Conditions. 
		Es geht an dieser Stelle um die Verdeutlichung des Condition-Konstruktes.
		Jede Condition für sich betrachtet ist sinnvoll und richtig, nicht aber die Conditions in Kombination -->
	<Products>
		<Product Key="Package" ProductType="FlightAccommodation">
			<Components>
				<Accommodation/>
				<ReturnFlight/>
			</Components>
		</Product>
	</Products>
	<Brands>
		<Brand Key="TO1"/>
	</Brands>
	<Accommodations>
		<Accommodation Key="TT01">
			<Properties>
				<PropertyGroup>
					<AccommodationName>Hotel "Beach"</AccommodationName>
				</PropertyGroup>
			</Properties>
			<SellingAccom Key="TT01">
				<Booking>
					<BookingGroup Area="ServiceArea">
						<BookingParameter Field="ServiceCode">
							<Value>TT01</Value>
						</BookingParameter>
						<BookingParameter Field="RequestCode">
							<Value>H</Value>
						</BookingParameter>
					</BookingGroup>
				</Booking>
				<Filter>
					<And>
						<BookingDate Source="Product">
							<Max>2013-01-31</Max>
						</BookingDate>
						<Date Source="ThisComponent" DayType="CheckIn">
							<Min>2013-11-03</Min>
						</Date>
					</And>
				</Filter>
				<Board Key="Board"></Board>
				<Unit Key="DZ">
					<SellingUnit Key="DZ">
						<Booking>
							<BookingGroup Area="ServiceArea">
								<BookingParameter Field="ServiceFeatureCode">
									<Value>DZ</Value>
								</BookingParameter>
							</BookingGroup>
						</Booking>
						<Properties>
							<PropertyGroup>
								<UnitName>Doppelzimmer</UnitName>
							</PropertyGroup>
						</Properties>
						<Occupancy Key="1">
							<Person>
								<Count>2</Count>
							</Person>
						</Occupancy>
						<PriceItems Key="1">
							<PriceItem Class="ABC">
								<Absolute>
									<Value>100</Value>
									<DayBase>1</DayBase>
									<PersonBase>1</PersonBase>
								</Absolute>
								<!--All Accommodation Conditions-->
								<Condition>
									<And>
										<PersonImpact>
											<PersonIndex Source="Product">
												<Until>4</Until>
												<From>3</From>
												<PersonFilter>
													<PersonAge Source="Product">
														<Min>2</Min>
														<Max>6</Max>
													</PersonAge>
												</PersonFilter>
											</PersonIndex>
										</PersonImpact>
										<PersonImpact>
											<PersonAge Source="Product">
												<Min>3</Min>
												<Max>12</Max>
											</PersonAge>
										</PersonImpact>
										<Date Source="Product" DayType="CheckIn">
											<Min>2012-03-30</Min>
											<Max>2012-04-30</Max>
										</Date>
										<Date Source="Product">
											<Dates>2011-12-31 2011-12-24</Dates>
										</Date>
										<Duration Source="Accommodation">
											<Min>5</Min>
										</Duration>
										<Duration Source="Product">
											<Durations>7 14 21</Durations>
										</Duration>
										<BookingDate Source="Product">
											<Min>2012-01-31</Min>
											<Max>2012-03-31</Max>
										</BookingDate>
										<BookingDateOffset Source="Product">
											<Min>30</Min>
											<Max>60</Max>
										</BookingDateOffset>
										<Weekdays Source="Accommodation" DayType="CheckIn">Mon Tue</Weekdays>
										<PersonGroup Source="Accommodation">
											<Person>
												<Count>1</Count>
											</Person>
											<Person>
												<MinAge>2</MinAge>
												<MaxAge>14</MaxAge>
												<Count>1</Count>
											</Person>
										</PersonGroup>
										<Keys Source="Accommodation">PMI215</Keys>
										<Keys Source="Accommodation.SellingAccom.Unit">DZ</Keys>
										<Keys Source="Accommodation.SellingAccom.Board">AI</Keys>
										<Tags Source="Accommodation.SellingAccom.Unit" Class="KennzeichenA">AB1</Tags>
										<Tags Source="Accommodation" Offset="0" Length="4" Class="AccomCode">PMI1</Tags>
										<!-- CheckIn oder Stay wird beim Setzen des Tags über den Type des Datums definiert.   -->
										<PersonImpact>
											<PersonAge Source="Product">
												<Min>6</Min>
												<Max>14</Max>
											</PersonAge>
										</PersonImpact>
										<PersonImpact>
											<PersonIndex Source="Product">
												<Indices>1 3 7</Indices>
											</PersonIndex>
										</PersonImpact>
										<DayImpact>
											<Date Source="Product" DayType="CheckIn">
												<Min>2012-12-24</Min>
												<Max>2013-01-02</Max>
											</Date>
										</DayImpact>
										<DayImpact>
											<DayIndex Source="Product">
												<Indices>1</Indices>
											</DayIndex>
										</DayImpact>
										<DayImpact>
											<DayIndex Source="Product">
												<Indices>-1</Indices>
											</DayIndex>
										</DayImpact>
										<DayImpact>
											<DayIndex Source="Product" Repeat="7">
												<Indices>1 2</Indices>
											</DayIndex>
										</DayImpact>
										<DayImpact>
											<Weekdays Source="Accommodation" DayType="CheckIn">Fri Sat Sun</Weekdays>
										</DayImpact>
										<!-- And     Not     Or   -->
										<Or>
											<And>
												<Date Source="Product" DayType="CheckOut">
													<Min>2011-12-11</Min>
												</Date>
												<Duration Source="Accommodation">
													<Min>6</Min>
												</Duration>
												<Not>
													<Weekdays Source="Accommodation" DayType="CheckIn">Fri Mon</Weekdays>
												</Not>
											</And>
											<Keys Source="Accommodation">PMI215</Keys>
										</Or>
										<!-- Imply   If     then    -->
										<Imply>
											<If>
												<And>
													<Date Source="Product" DayType="CheckIn">
														<Min>2012-05-01</Min>
														<Max>2010-05-31</Max>
													</Date>
													<Weekdays Source="Accommodation" DayType="CheckIn">Fri</Weekdays>
												</And>
											</If>
											<Then>
												<Duration Source="Accommodation">
													<Min>7</Min>
												</Duration>
											</Then>
										</Imply>
										<And>
											<Duration Source="Accommodation">
												<Min>3</Min>
											</Duration>
											<Imply>
												<If>
													<Keys Source="Accommodation.SellingAccom.Board">VP</Keys>
												</If>
												<Then>
													<Duration Source="Accommodation">
														<Min>5</Min>
													</Duration>
												</Then>
											</Imply>
										</And>
										<Impact>
											<ConditionalTags Source="Accommodation" Class="Season">A</ConditionalTags>
										</Impact>
										<Impact>
											<ConditionalTags Source="Accommodation" Class="PersonType">Fullpayer</ConditionalTags>
										</Impact>
										<Impact>
											<ConditionalTags Source="Accommodation.SellingAccom" Class="Season">A B C</ConditionalTags>
										</Impact>
										<Impact>
											<ConditionalTags Source="ReturnFlight" Class="Season">A B C</ConditionalTags>
										</Impact>
									</And>
								</Condition>
								<!--Ende der Beispiel Condition-->
							</PriceItem>
						</PriceItems>
						<Availabilities Key="DZ">
							<Availability Key="2011-11-01" StartDate="2011-11-01" EndDate="2012-04-30">
								<DefaultDayState>
									<Open/>
									<CheckIn/>
									<CheckOut/>
								</DefaultDayState>
							</Availability>
						</Availabilities>
					</SellingUnit>
				</Unit>
			</SellingAccom>
			<CatchmentAirports>PMI</CatchmentAirports>
		</Accommodation>
	</Accommodations>
	<Flights>
		<ReturnFlights>
			<ReturnFlight Key="DUSPMI">
				<Outbound>
					<DepartureAirport>DUS</DepartureAirport>
					<ArrivalAirport>PMI</ArrivalAirport>
				</Outbound>
				<Inbound>
					<DepartureAirport>PMI</DepartureAirport>
					<ArrivalAirport>DUS</ArrivalAirport>
				</Inbound>
				<BookingClass Key="DUSPMI">
					<Booking>
						<BookingGroup Area="ServiceArea">
							<BookingParameter Field="ServiceCode">
								<Value>DUSPMI</Value>
							</BookingParameter>
						</BookingGroup>
					</Booking>
					<Occupancy Key="1">
						<Person>
							<MinCount>1</MinCount>
						</Person>
					</Occupancy>
					<Availabilities Key="DUSPMI">
						<Availability Key="2011-11-01" StartDate="2011-11-01" EndDate="2012-04-30">
							<DefaultDayState>
								<Open/>
								<CheckIn/>
								<CheckOut/>
							</DefaultDayState>
						</Availability>
					</Availabilities>
					<PriceItems Key="1">
						<PriceItem Class="AB">
							<Absolute>
								<Value>430</Value>
								<DayBase>x</DayBase>
								<PersonBase>1</PersonBase>
							</Absolute>
							<!--Beispiel Flight Condition-->
							<Condition>
								<And>
									<Tags Source="ReturnFlight" Class="Airline">LH</Tags>
									<Tags Source="ReturnFlight" Class="Carrier">AirBerlin</Tags>
									<Tags Source="ReturnFlight.Inbound" Class="FlightCode">LH453</Tags>
									<Airports Source="ReturnFlight.Inbound" AirportType="Departure">PMI</Airports>
									<Keys Source="OnewayFlight.BookingClass">YY</Keys>
								</And>
							</Condition>
							<!--Ende Beispiel Flight Condition-->
						</PriceItem>
					</PriceItems>
				</BookingClass>
			</ReturnFlight>
		</ReturnFlights>
	</Flights>
	<Addons>
		<Addon Key="WT">
			<Properties>
				<PropertyGroup>
					<AddonName>Wellness Treatment</AddonName>
				</PropertyGroup>
			</Properties>
			<Service Key="BP">
				<Properties>
					<PropertyGroup>
						<AddonName>BlütenPackung</AddonName>
					</PropertyGroup>
				</Properties>
				<PriceItems Key="1">
					<PriceItem Class="Base">
						<Absolute>
							<Value>80</Value>
							<DayBase>x</DayBase>
							<PersonBase>1</PersonBase>
						</Absolute>
						<!--Beispiel Addon Condition-->
						<Condition>
							<And>
								<Date Source="Product" DayType="CheckIn">
									<Min>2011-12-01</Min>
									<Max>2011-12-31</Max>
								</Date>
								<Duration Source="Product">
									<Min>2</Min>
								</Duration>
							</And>
						</Condition>
						<!--Ende Beispiel Addon Condition-->
					</PriceItem>
				</PriceItems>
				<Availabilities Key="BP">
					<Availability Key="2011-11-01" StartDate="2011-11-01" EndDate="2012-04-30">
						<DefaultDayState>
							<Open/>
							<CheckIn/>
							<CheckOut/>
						</DefaultDayState>
					</Availability>
				</Availabilities>
			</Service>
		</Addon>
	</Addons>
</Otds>
